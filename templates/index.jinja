{% extends "base.jinja" %}

{% block body %}
<main>
    <div class="flex w-full">
        <img class="m-auto h-28" src="{{url_for('static', filename='media/logo_transparent.png')}}" />
    </div>
    <h1 class="text-center pb-12">
        Welcome To PyAuth!
    </h1>



    <div id="selector">
        <div class="flex justify-evenly">
            <div class="w-full m-auto px-[2px] pt-[2px] bg-black dark:bg-gray-600">
                <button id="user-about-selector-innactive" class="w-full bg-white p-4 dark:bg-gray-950" onclick="ToggleUserAbout()">
                    For users
                </button>
                <button id="user-about-selector-active" class="w-full bg-gray-200 p-4 dark:bg-gray-800" onclick="ToggleUserAbout()">
                    For users
                </button>
            </div>
            <div class="w-full m-auto pr-[2px] pt-[2px] bg-black dark:bg-gray-600">
                <button id="developer-about-selector-innactive" class="w-full p-4 bg-white dark:bg-gray-950"
                    onclick="ToggleDeveloperAbout()">
                    For Developers
                </button>
                <button id="developer-about-selector-active" class="w-full p-4 bg-gray-200 dark:bg-gray-800"
                    onclick="ToggleDeveloperAbout()">
                    For Developers
                </button>
            </div>
        </div>
        <div id="user-about-display" class="p-2 pt-6">
            {% include "components/user_about.jinja" %}
        </div>
        <div id="developer-about-display" class="p-2 pt-6 hidden">
            {% include "components/developer_about.jinja" %}
        </div>
    </div>
    {# {% include "components/public_key.jinja" %} #}

    <p class="pb-12 italic opacity-50 pt-12">
        * Not to be confused
        with <a class="underline whitespace-nowrap text-blue-700 dark:text-blue-400"
            href="https://pypi.org/project/PyAuth/" target="_blank">PyPI - PyAuth</a>
    </p>


    <script>
        function ToggleDisplayHidden(selector, hidden) {
            document.querySelector(selector).classList.toggle("hidden", hidden)
        }

        function ToggleDeveloperAbout() {
            ToggleDisplayHidden("#user-about-display", true);
            ToggleDisplayHidden("#user-about-selector-innactive", true);
            ToggleDisplayHidden("#user-about-selector-active", false);
            
            ToggleDisplayHidden("#developer-about-display", false);
            ToggleDisplayHidden("#developer-about-selector-innactive", false);
            ToggleDisplayHidden("#developer-about-selector-active", true);
        };

        function ToggleUserAbout() {
            ToggleDisplayHidden("#user-about-display", false);
            ToggleDisplayHidden("#user-about-selector-innactive", false);
            ToggleDisplayHidden("#user-about-selector-active", true);
            
            ToggleDisplayHidden("#developer-about-display", true);
            ToggleDisplayHidden("#developer-about-selector-innactive", true);
            ToggleDisplayHidden("#developer-about-selector-active", false);
        };

        ToggleUserAbout();
    </script>
</main>
{% endblock body %}